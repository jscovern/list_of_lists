<div class="container">
	<div class="col-6-md col-md-offset-3">
	<p>You logged in mother fucker, you.</p>
	<% @features.each do |list|%>
		<div class="row">
            <div class="list">
                <br />
                <div class="col-md-3">
                    <img src="<%=list.img_url%>" width=100%>   
                </div>
                <div class="col-md-9">
                <a href="/lists/<%=list.id%>"><h3><%=list.title%></h3><hr></a>
                <p><%=list.description%></p>
                </div>    
            </div>  
            </div>
	<% end %>
	</div>

    <form id="add-book-form">
        <input type="hidden" name="list_id" value="16">
        <div class="form-group">
        <label for="title">Title</label>
            <input id="title" type="text" class="form-control" placeholder="Title" name="title">
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input id="author" name="author" type="text" class="form-control" placeholder="Author">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" type="textarea" class="form-control" placeholder="Description">
            </textarea>
        </div>
        <div class="form-group">
            <label for="coverimage">Cover Image URL</label>
            <input id= "coverimage" type="text" name="img_url" class="form-control" placeholder="Cover Image Url">
        </div>
            <button id="add-book-button" type="submit" class="btn btn-default">Add Item</button>
        </div>
    </form>

</div>