<form id="add-place-form">
        <input type="hidden" name="list_id" value=<%= @list.id %>>
        <div class="form-group">
        <label for="name">Name</label>
            <input id="name" type="text" class="form-control" placeholder="Name" name="name">
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input id="address" name="address" type="text" class="form-control" placeholder="Address">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" type="textarea" class="form-control" placeholder="Description">
            </textarea>
        </div>
        <div class="form-group">
            <label for="image">Image URL</label>
            <input id= "image" type="text" name="img_url" class="form-control" placeholder="Image Url">
        </div>
            <button id="add-place-button" type="submit" class="btn btn-default">Add Item</button>
        </div>
    </form>